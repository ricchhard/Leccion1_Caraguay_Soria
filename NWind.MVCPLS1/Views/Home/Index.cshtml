@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Index</title>
    <style>
        body {
            font-family: 'Arial, sans-serif';
            background-color: #000;
            color: white;
            height: 100vh;
            margin: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        h1 {
            font-size: 32px;
            margin-bottom: 40px;
            text-align: center;
        }

        table {
            width: 100%;
            max-width: 600px;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            table td {
                padding: 10px;
            }

        label {
            font-weight: bold;
            color: white;
        }

        input[type="text"] {
            width: calc(100% - 130px); /* Espacio para los botones */
            padding: 10px;
            border: 2px solid #74ebd5;
            border-radius: 6px;
            outline: none;
            transition: border-color 0.3s;
            background-color: #222;
            color: white;
        }

            input[type="text"]:focus {
                border-color: #007bff;
            }

        input[type="submit"], .btn {
            background-color: #007bff;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin: 5px;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

            input[type="submit"]:hover, .btn:hover {
                background-color: #0056b3;
            }

        .btn-success {
            background-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        .btn-danger {
            background-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .buttons {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Prueba Parcial 1 Mikela y Richard</h1>
    </div>

    <table>
        <tr>
            <td>
                <label for="id">ID de Producto:</label>
            </td>
            <td>
                @using (Html.BeginForm())
                {
                    <input type="text" name="id" placeholder="Ingrese el ID" />
                    <input type="submit" value="Buscar" />
                }
            </td>
        </tr>
    </table>

    <div class="buttons">
        <a href="@Url.Action("CategoryCRUD", "Home")" class="btn btn-success">Ir a CRUD Categorías</a>
        <a href="@Url.Action("CRUD", "Home")" class="btn btn-success">Ir a CRUD Productos</a>
        <a href="@Url.Action("List", "Home")" class="btn">Listar Productos</a>
        <a href="@Url.Action("CategoryList", "Home")" class="btn">Listar Categorías</a>
    </div>
</body>
</html>
